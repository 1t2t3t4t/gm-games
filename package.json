		"replace": "^1.1.3",
		"rollup": "^1.29.0",
		"rollup-plugin-babel": "^4.3.3",
		"rollup-plugin-blacklist": "^1.0.1",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-terser": "^5.1.3",
		"rollup-plugin-visualizer": "^3.3.1",
		"terser": "^4.6.2",
		"typescript": "^3.7.4",
