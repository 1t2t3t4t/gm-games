{
    "name": "gm-games",
    "version": "5.0.0",
    "description": "A single-player basketball simulation game. Make trades, set rosters, draft players, and try to build the next dynasty, all from within your web browser. The game is implemented entirely in client-side JavaScript, backed by IndexedDB.",
    "homepage": "https://basketball-gm.com/",
    "bugs": {
        "url": "https://github.com/dumbmatter/gm-games/issues"
    },
    "author": "Jeremy Scheff <jdscheff@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/dumbmatter/gm-games.git"
    },
    "scripts": {
        "start": "node tools/server.js",
        "build": "node tools/build.js && node tools/build-js.js && node tools/build-sw.js",
        "deploy": "yarn run build && node tools/deploy.js",
        "start-watch": "concurrently --kill-others 'yarn run start' 'yarn run watch'",
        "watch": "node tools/pre-watch.js && concurrently --kill-others 'yarn run watch-css' 'yarn run watch-js'",
        "watch-css": "node tools/watch-css.js",
        "watch-js": "node tools/watch-js.js",
        "lint": "concurrently --raw 'yarn run flow' 'yarn run lint-js'",
        "flow": "flow",
        "lint-js": "eslint '*.js' 'public/*.js' 'src/**/*.js' 'tools/**/*.js'",
        "prettier": "prettier --write '*.{js,json,scss}' 'public/**/*.{js,json,scss}' 'src/**/*.{js,json,scss}' 'tools/**/*.{js,json,scss}'",
        "test": "jest",
        "test-e2e": "karma start karma.conf.js",
        "test-e2e-watch": "karma start karma.conf.js --auto-watch --no-single-run",
        "test-e2e-browserstack": "karma start karma-browserstack.conf.js"
    },
    "lint-staged": {
        "*.{js,json,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "@babel/runtime": "^7.6.2",
        "@bugsnag/plugin-react": "^6.4.0",
        "ajv": "^6.10.2",
        "backboard": "^1.0.9",
        "bbgm-router": "^1.0.1",
        "bootstrap": "^4.3.1",
        "classnames": "^2.2.6",
        "csv-stringify": "^5.3.3",
        "d3-axis": "^1.0.12",
        "d3-scale": "^3.1.0",
        "d3-selection": "^1.4.0",
        "d3-shape": "^1.3.5",
        "dompurify": "^2.0.3",
        "facesjs": "^2.0.3",
        "html2canvas": "^1.0.0-rc.5",
        "indexeddb-getall-shim": "^1.3.5",
        "lodash": "^4.17.15",
        "object.entries": "^1.1.0",
        "object.values": "^1.1.0",
        "promise-worker-bi": "^3.0.2",
        "react": "^16.10.1",
        "react-addons-text-content": "^0.0.4",
        "react-confirm": "^0.1.18",
        "react-dom": "^16.10.1",
        "react-overlays": "^1.2.0",
        "react-sortable-hoc": "dumbmatter/react-sortable-hoc#clonedNode-in-onSortStart",
        "reactstrap": "^6.5.0",
        "roman-numerals": "^0.3.2",
        "unstated": "^2.1.1",
        "url-search-params-polyfill": "^7.0.0",
        "whatwg-fetch": "^3.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.6.2",
        "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
        "@babel/plugin-transform-async-to-generator": "^7.5.0",
        "@babel/plugin-transform-destructuring": "^7.6.0",
        "@babel/plugin-transform-exponentiation-operator": "^7.2.0",
        "@babel/plugin-transform-for-of": "^7.4.4",
        "@babel/plugin-transform-modules-commonjs": "^7.6.0",
        "@babel/plugin-transform-parameters": "^7.4.4",
        "@babel/plugin-transform-runtime": "^7.6.2",
        "@babel/preset-flow": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.0.3",
        "cheerio": "^1.0.0-rc.3",
        "chokidar": "^3.2.1",
        "clean-css": "^4.2.1",
        "cloudflare": "^2.7.0",
        "concurrently": "^4.1.2",
        "eslint": "^6.5.1",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.3.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.15.1",
        "eslint-plugin-react-hooks": "^2.1.1",
        "fake-indexeddb": "^2.1.1",
        "flow-bin": "0.108.0",
        "flow-typed": "^2.6.1",
        "fs-extra": "^8.1.0",
        "husky": "^3.0.8",
        "jest": "^24.9.0",
        "karma": "^4.3.0",
        "karma-browserstack-launcher": "^1.5.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-firefox-launcher": "^1.2.0",
        "karma-mocha": "^1.3.0",
        "karma-rollup-preprocessor": "^7.0.2",
        "karma-source-map-support": "^1.4.0",
        "lint-staged": "^9.4.1",
        "mocha": "^6.2.1",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "prop-types": "^15.7.2",
        "replace": "^1.1.1",
        "rollup": "^1.22.0",
        "rollup-plugin-alias": "^2.0.1",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-blacklist": "^1.0.1",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-terser": "^5.1.2",
        "terser": "^4.3.4",
        "workbox-build": "^4.3.1"
    },
    "private": true,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
